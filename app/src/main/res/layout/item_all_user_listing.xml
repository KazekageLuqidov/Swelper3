<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/padding_small"
    android:paddingEnd="@dimen/padding_avg"
    android:paddingStart="@dimen/padding_avg"
    android:paddingTop="@dimen/padding_small">


    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/circle_accent"
        android:id="@+id/text_user_alphabet"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="a"
        android:textColor="@color/splashback"
        android:textAppearance="android:attr/textApperanceLarge"
        android:maxEms="1"
        android:layout_height="wrap_content" />
    
    <android.support.v4.widget.Space
        android:layout_width="@dimen/space_avg"
        android:layout_height="wrap_content" />

</LinearLayout>